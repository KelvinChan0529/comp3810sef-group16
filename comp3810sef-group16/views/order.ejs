<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Food - Food Ordering System</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .order-container {
      display: grid;
      grid-template-columns: 1fr 350px;
      gap: 20px;
      margin-top: 20px;
    }
    
    .menu-section {
      background: var(--card);
      border-radius: 8px;
      padding: 20px;
    }
    
    .category-section {
      margin-bottom: 30px;
    }
    
    .category-title {
      font-size: 1.5rem;
      margin-bottom: 15px;
      color: var(--primary);
      border-bottom: 2px solid var(--primary);
      padding-bottom: 10px;
    }
    
    .menu-items-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 15px;
    }
    
    .menu-item-card {
      background: var(--bg);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 15px;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .menu-item-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(34, 197, 94, 0.2);
    }
    
    .menu-item-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 4px;
      margin-bottom: 10px;
    }
    
    .menu-item-card h4 {
      margin: 10px 0 5px;
      color: var(--text);
    }
    
    .menu-item-card .price {
      color: var(--primary);
      font-weight: bold;
      font-size: 1.2rem;
      margin: 10px 0;
    }
    
    .menu-item-card .description {
      color: var(--muted);
      font-size: 0.9rem;
      margin-bottom: 15px;
    }
    
    .add-to-cart-btn {
      width: 100%;
      padding: 10px;
      background: var(--primary);
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.2s;
    }
    
    .add-to-cart-btn:hover {
      background: var(--primary-hover);
    }
    
    .add-to-cart-btn:disabled {
      background: var(--secondary);
      cursor: not-allowed;
    }
    
    .cart-sidebar {
      background: var(--card);
      border-radius: 8px;
      padding: 20px;
      position: sticky;
      top: 20px;
      max-height: calc(100vh - 40px);
      overflow-y: auto;
    }
    
    .cart-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 0;
      border-bottom: 1px solid var(--border);
    }
    
    .cart-item-info {
      flex: 1;
    }
    
    .cart-item-name {
      font-weight: bold;
      margin-bottom: 5px;
    }
    
    .cart-item-price {
      color: var(--muted);
      font-size: 0.9rem;
    }
    
    .cart-item-controls {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .quantity-btn {
      background: var(--secondary);
      border: none;
      color: var(--text);
      width: 30px;
      height: 30px;
      border-radius: 4px;
      cursor: pointer;
    }
    
    .quantity-input {
      width: 50px;
      text-align: center;
      background: var(--bg);
      border: 1px solid var(--border);
      color: var(--text);
      padding: 5px;
      border-radius: 4px;
    }
    
    .cart-total {
      margin-top: 20px;
      padding-top: 20px;
      border-top: 2px solid var(--primary);
    }
    
    .cart-total-amount {
      font-size: 1.5rem;
      color: var(--primary);
      font-weight: bold;
    }
    
    .submit-order-btn {
      width: 100%;
      padding: 15px;
      background: var(--primary);
      color: white;
      border: none;
      border-radius: 4px;
      font-size: 1.1rem;
      font-weight: bold;
      cursor: pointer;
      margin-top: 15px;
      transition: background 0.2s;
    }
    
    .submit-order-btn:hover {
      background: var(--primary-hover);
    }
    
    .submit-order-btn:disabled {
      background: var(--secondary);
      cursor: not-allowed;
    }
    
    .empty-cart {
      text-align: center;
      color: var(--muted);
      padding: 40px 0;
    }
    
    @media (max-width: 768px) {
      .order-container {
        grid-template-columns: 1fr;
      }
      
      .cart-sidebar {
        position: relative;
        top: 0;
      }
    }
  </style>
</head>
<body>
<header class="container row space-between">
  <h1>üçï Order Food</h1>
  <nav class="row gap">
    <a class="btn" href="/">Home</a>
    <a class="btn btn-secondary" href="/menu">Menu Management</a>
    <a class="btn btn-secondary" href="/logout">Logout</a>
  </nav>
</header>

<div class="container">
  <div class="order-container">
    <!-- Menu Items -->
    <div class="menu-section">
      <h2>Welcome, <%= username %>! üëã</h2>
      <p class="muted" style="margin-bottom: 20px;">Browse our menu and add items to your cart</p>
      
      <% 
        const itemsByCategory = {};
        items.forEach(item => {
          if (!itemsByCategory[item.category]) {
            itemsByCategory[item.category] = [];
          }
          itemsByCategory[item.category].push(item);
        });
      %>
      
      <% Object.keys(itemsByCategory).forEach(category => { %>
        <div class="category-section">
          <h3 class="category-title"><%= category %></h3>
          <div class="menu-items-grid">
            <% itemsByCategory[category].forEach(item => { %>
              <div class="menu-item-card">
                <% if (item.imageUrl) { %>
                  <img src="<%= item.imageUrl %>" alt="<%= item.name %>" onerror="this.style.display='none'">
                <% } else { %>
                  <div style="width: 100%; height: 150px; background: var(--secondary); display: flex; align-items: center; justify-content: center; border-radius: 4px; font-size: 3rem;">üç¥</div>
                <% } %>
                <h4><%= item.name %></h4>
                <div class="price">$<%= item.price.toFixed(2) %></div>
                <p class="description"><%= item.description || 'Delicious food item' %></p>
                <button class="add-to-cart-btn" onclick="addToCart('<%= item._id %>', '<%= item.name %>', <%= item.price %>)">
                  ‚ûï Add to Cart
                </button>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>
    </div>
    
    <!-- Shopping Cart Sidebar -->
    <div class="cart-sidebar">
      <h2>üõí Your Cart</h2>
      <div id="cart-items">
        <% if (cart.length === 0) { %>
          <div class="empty-cart">
            <p>Your cart is empty</p>
            <p class="muted">Add items from the menu to get started!</p>
          </div>
        <% } else { %>
          <% cart.forEach(item => { %>
            <div class="cart-item" data-item-id="<%= item.itemId %>">
              <div class="cart-item-info">
                <div class="cart-item-name"><%= item.name %></div>
                <div class="cart-item-price">$<%= item.price.toFixed(2) %> √ó <span class="quantity"><%= item.quantity %></span> = $<%= (item.price * item.quantity).toFixed(2) %></div>
              </div>
              <div class="cart-item-controls">
                <button class="quantity-btn" onclick="updateQuantity('<%= item.itemId %>', <%= item.quantity - 1 %>)">-</button>
                <input type="number" class="quantity-input" value="<%= item.quantity %>" min="1" 
                       onchange="updateQuantity('<%= item.itemId %>', this.value)">
                <button class="quantity-btn" onclick="updateQuantity('<%= item.itemId %>', <%= item.quantity + 1 %>)">+</button>
                <button class="btn btn-danger" style="padding: 5px 10px; margin-left: 10px;" 
                        onclick="removeFromCart('<%= item.itemId %>')">üóëÔ∏è</button>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
      
      <div class="cart-total">
        <div class="row space-between">
          <span>Total:</span>
          <span class="cart-total-amount" id="cart-total">$<%= cart.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) %></span>
        </div>
        <button class="submit-order-btn" id="submit-order-btn" 
                <%= cart.length === 0 ? 'disabled' : '' %> 
                onclick="submitOrder()">
          Place Order
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  async function addToCart(itemId, itemName, price) {
    try {
      const response = await fetch('/order/add-to-cart', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ itemId, quantity: 1 })
      });
      
      const data = await response.json();
      
      if (data.success) {
        alert(data.message || 'Item added to cart!');
        location.reload();
      } else {
        alert('Failed to add item to cart');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error adding item to cart');
    }
  }
  
  async function updateQuantity(itemId, quantity) {
    if (quantity < 1) {
      removeFromCart(itemId);
      return;
    }
    
    try {
      const response = await fetch('/order/update-cart', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ itemId, quantity })
      });
      
      const data = await response.json();
      
      if (data.success) {
        location.reload();
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error updating cart');
    }
  }
  
  async function removeFromCart(itemId) {
    if (!confirm('Remove this item from cart?')) return;
    
    try {
      const response = await fetch('/order/remove-from-cart', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ itemId })
      });
      
      const data = await response.json();
      
      if (data.success) {
        location.reload();
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error removing item from cart');
    }
  }
  
  async function submitOrder() {
    if (!confirm('Place this order?')) return;
    
    try {
      const response = await fetch('/order/submit', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        }
      });
      
      const data = await response.json();
      
      if (data.success) {
        alert('Order placed successfully! üéâ');
        location.reload();
      } else {
        alert('Failed to place order: ' + (data.error || 'Unknown error'));
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error placing order');
    }
  }
</script>
</body>
</html>

